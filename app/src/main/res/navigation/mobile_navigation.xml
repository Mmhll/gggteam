<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ggg.gggapp.fragments.home.HomeFragment"
        android:label="Сервисы"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.ggg.gggapp.fragments.dashboard.DashboardFragment"
        android:label="Новости"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.ggg.gggapp.fragments.notifications.NotificationsFragment"
        android:label="Чат"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.ggg.gggapp.fragments.chat.ChatFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_chat" />

